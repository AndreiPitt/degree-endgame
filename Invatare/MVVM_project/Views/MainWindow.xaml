<Window x:Class="MVVM_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Text="{Binding PersoanaSelectata.Name}" Width="200" Margin="0 0 0 10"/>
            <TextBox Text="{Binding PersoanaSelectata.Age}" Width="200"/>
            <Button Content="Schimba numele"
                Command="{Binding PersoanaSelectata.SchimbaNumeCommand}"
                Width="200"
                Margin="0 10 0 0"/>
            <Button Content="Incrementeaza varsta"
                Command="{Binding PersoanaSelectata.IncrementeazaVarstaCommand}"
                Width="200"
                Margin="0 10 0 10"/>

            <ListBox ItemsSource="{Binding Persoane}"
                 SelectedItem="{Binding PersoanaSelectata}"
                 DisplayMemberPath="Name"
                 Width="200"
                 Height="150"
                 Margin="0 0 0 10"/>

            <Button Content="Adauga persoana"
                Command="{Binding AdaugaPersoanaCommand}"
                Width="200"/>



        </StackPanel>
    </Grid>
</Window>
