<Window x:Class="ForgeProgress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForgeProgress"
        mc:Ignorable="d"
        Title="ForgeProgress" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        

        
        <StackPanel Margin="10" Grid.Column="0">
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Greutate" />
                <TextBox Grid.Column="1" Text="{Binding CurrentEntry.BodyWeight }" Width="80"/>
            </Grid>

            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Total_kcal"/>
                <TextBox Grid.Column="1" Text="{Binding CurrentEntry.TotalCalories }" Width="80"/>
            </Grid>
            
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Proteina" />
                <TextBox Grid.Column="1" Text="{Binding CurrentEntry.Protein }" Width="80"/>
            </Grid>

            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Carbs" />
                <TextBox Grid.Column="1" Text="{Binding CurrentEntry.Carbohydrates }" Width="80"/>
            </Grid>

            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Grasimi" />
                <TextBox Grid.Column="1" Text="{Binding CurrentEntry.Fats }" Width="80"/>
            </Grid>

            <DatePicker Name="myDatePicker" 
                SelectedDate="{Binding CurrentEntry.Date}"
                DisplayDateStart="2026-01-01" 
                DisplayDateEnd="2030-12-31" 
                FirstDayOfWeek="Monday" />

            <Button Content="Adauga"
                Command="{Binding AddEntryCommand}"
                Width="120"
                Margin="0 10 0 0"/>
        </StackPanel>
        
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" 
                 ItemsSource="{Binding Entries}"
                 SelectedItem="{Binding SelectedEntry}"
                 DisplayMemberPath="TotalCalories"
                 Height="auto"
                 Margin="10"/>

            <Grid Grid.Row="1" 
                Margin="0 0 0 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0"
                           Grid.ColumnSpan="2" 
                           Margin="10"
                           Background="Gray"/>
                
                <Button 
                Grid.Row="1"
                Grid.Column="1"
                Margin="0 0 10 0"
                Content="Salveaza"
                Command="{Binding SaveCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
