<Window x:Class="Calculator_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_WPF"
        mc:Ignorable="d"
        Title="Calculeaza" Height="500" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="DisplayGrid" Grid.Row="0" Margin="0">
            <TextBlock x:Name="Display"  FontSize="50" HorizontalAlignment="Center">AFISAJ</TextBlock>
        </Grid>
        
        <Grid x:Name="ButtonsGrid" Grid.Row="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button FontWeight="Heavy" Grid.Row="0" Grid.Column="0" Click="Button_Click">7</Button>
            <Button FontWeight="Heavy" Grid.Row="0" Grid.Column="1" Click= "Button_Click">8</Button>
            <Button FontWeight="Heavy" Grid.Row="0" Grid.Column="2" Click= "Button_Click">9</Button>
            <Button FontWeight="Heavy" Grid.Row="0" Grid.Column="3" Click= "Operator_Click">/</Button>

            <Button FontWeight="Heavy" Grid.Row="1" Grid.Column="0" Click="Button_Click">4</Button>
            <Button FontWeight="Heavy" Grid.Row="1" Grid.Column="1" Click="Button_Click">5</Button>
            <Button FontWeight="Heavy" Grid.Row="1" Grid.Column="2" Click="Button_Click">6</Button>
            <Button FontWeight="Heavy" Grid.Row="1" Grid.Column="3" Click="Operator_Click">*</Button>
                                                                    
            <Button FontWeight="Heavy" Grid.Row="2" Grid.Column="0" Click="Button_Click">1</Button>
            <Button FontWeight="Heavy" Grid.Row="2" Grid.Column="1" Click="Button_Click">2</Button>
            <Button FontWeight="Heavy" Grid.Row="2" Grid.Column="2" Click="Button_Click">3</Button>
            <Button FontWeight="Heavy" Grid.Row="2" Grid.Column="3" Click="Operator_Click">-</Button>
                                                                    
            <Button FontWeight="Heavy" Grid.Row="3" Grid.Column="0" Click="Button_Click">0</Button>
            <Button FontWeight="Heavy" Grid.Row="3" Grid.Column="1" Click="Clear_Click">CE</Button>
            <Button FontWeight="Heavy" Grid.Row="3" Grid.Column="2" Click="Calculate_Click">=</Button>
            <Button FontWeight="Heavy" Grid.Row="3" Grid.Column="3" Click="Operator_Click">+</Button>
        </Grid>
    </Grid>
</Window>
